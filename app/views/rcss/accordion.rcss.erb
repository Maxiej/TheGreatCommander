/*
  Vertical Accordions
*/

#vertical_container{
    border: 1px solid #DEA681;
}
.accordion_toggle {
    display: block;
    height: 30px;
    width: 600px;
    background: url(../images/accordion/arrow_down.jpg) no-repeat top right#EDC9AF;
    padding: 0 10px 0 10px;
    line-height: 30px;
    color: #ffffff;
    font-weight: normal;
    text-decoration: none;
    outline: none;
    font-size: 12px;
    color: #000000;
    border-bottom: 1px solid #DEA681;
    cursor: pointer;
    margin: 0 0 0 0;
}

.accordion_toggle_active {
    background: url(../images/accordion/arrow_right.jpg) no-repeat top right #DEA681;
    color: #ffffff;
    border-bottom: 1px solid #DEA681;
}

.accordion_content {
    background-color: #FFFDD0;
    color: #444444;
    overflow: hidden;
}
  .accordion_content h2 {
          margin: 15px 0 5px 10px;
          color: #0099FF;
  }

  .accordion_content p {
          line-height: 150%;
          padding: 5px 10px 15px 10px;
  }

.vertical_accordion_toggle {
    display: block;
    height: 30px;
    width: 600px;
    background:  #EDC9AF;
    padding: 0 10px 0 10px;
    line-height: 30px;
    color: #ffffff;
    font-weight: normal;
    text-decoration: none;
    outline: none;
    font-size: 12px;
    color: #000000;
    border-bottom: 1px solid #cde99f;
    cursor: pointer;
